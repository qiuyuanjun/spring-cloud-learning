<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <properties>
    <!-- 定义日志输出格式 -->
    <property name="PATTERN">[%-d{HH:mm:ss}] [%r] [%p] [%c] - %m%n</property>
  </properties>

  <appenders>
    <Console name="CONSOLE" target="system_out">
      <PatternLayout pattern="${PATTERN}"/>
    </Console>
  </appenders>

  <loggers>
    <root level="info">
      <appenderref ref="CONSOLE"/>
    </root>
  </loggers>

</configuration>